<div class="position-absolute top-0 end-0 me-2 mt-2">
    <button class="btn btn-link" @onclick="ChangeAssetStatus">
        @if (Asset.Liked == null)
        {
            <div>-</div>
        }
        else if (Asset.Liked == true)
        {
            <i class="bi bi-hand-thumbs-up-fill"></i>
        }
        else
        {
            <i class="bi bi-hand-thumbs-down-fill"></i>
        }
    </button>
</div>

@code {
    [Parameter] public required Asset Asset { get; set; }
    
    private void ChangeAssetStatus()
    {
        if (Asset.Liked == null)
        {
            Asset.Liked = true;
        }
        else
        {
            Asset.Liked = !Asset.Liked;   
        }
    }
}